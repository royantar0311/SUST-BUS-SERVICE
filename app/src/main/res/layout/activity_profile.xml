    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                app:enabled="true"
                app:hasClearButton="true"
                app:hasFocus="true"
                app:primaryColor="@color/white">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:text="N/A"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/profile_username_tf"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:hasClearButton="true"
                app:hasFocus="false"
                app:helperText="tap to edit"
                app:labelText="Full Name"
                app:primaryColor="@color/A400red">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/profile_username_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/profile_regino_tf"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:enabled="true"
                app:hasClearButton="true"
                app:hasFocus="false"
                app:helperText="tap to edit"
                app:labelText="Registration No:"
                app:maxCharacters="10"
                app:primaryColor="@color/A400red">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/profile_regino_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/profile_id_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID not Detected"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/profile_id_chooser_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:onClick="idChooserButtonPressed"
            android:text="Choose"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="complete your profile and ask for permission"
            android:textColor="@color/A400red"
            android:textSize="10sp" />

        <Button
            android:id="@+id/update_profile_btn"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Save Profile"

            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>