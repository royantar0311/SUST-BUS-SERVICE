    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_texts_holder">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:hasFocus="true"
                app:enabled="true"
                app:hasClearButton="true"
                android:visibility="visible"
                app:primaryColor="@color/white">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:text="N/A"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/profile_username_tf"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:hasFocus="false"
                app:hasClearButton="true"
                app:helperText="tap to edit"
                app:labelText="Full Name"
                app:primaryColor="@color/A400red">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/profile_username_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColorHint="@color/black"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/profile_regino_tf"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:enabled="true"
                app:hasFocus="false"
                app:hasClearButton="true"
                app:helperText="tap to edit"
                app:labelText="Registration No:"
                app:primaryColor="@color/A400red">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/profile_regino_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="number"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="14dp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="206dp" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="75dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID not Detected"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        </LinearLayout>

            <Button
                android:id="@+id/id_upload_button"
                android:layout_width="80dp"
                android:layout_marginLeft="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Choose"
                android:background="@drawable/custom_button"
                android:textSize="10sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/complete_profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/A400red"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="complete your profile and ask for permission"/>
        <Button
            android:id="@+id/update_profile_btn"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"

            android:text="Save Profile"/>
    </LinearLayout>

</LinearLayout>